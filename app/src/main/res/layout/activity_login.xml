<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2.2dp"
            android:background="@android:color/holo_orange_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_black" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/sfcompactdisplay_regular"
            android:gravity="center"
            android:text="an App for attendance system"
            android:textSize="16sp" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="22dp"
                android:paddingRight="12dp"
                android:paddingBottom="22dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfcompactdisplay_bold"
                    android:paddingLeft="22dp"
                    android:paddingBottom="12dp"
                    android:text="License Number" />

                <EditText
                    android:id="@+id/et_employee_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_rounded_grey"
                    android:fontFamily="@font/sfcompactdisplay_bold"
                    android:paddingLeft="22dp"
                    android:paddingTop="12dp"
                    android:paddingRight="22dp"
                    android:paddingBottom="12dp"
                    android:text="XXXXXXXX" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_shape_true"
                    android:text="Verify"
                    android:textColor="#FFF" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/button_shape_false"
        android:padding="6dp"
        android:src="@drawable/ic_info" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="22dp"
        android:text="Copyright Santabodhi Innovation"
        android:textColor="#FFF" />


</FrameLayout>